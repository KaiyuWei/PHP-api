{
    "openapi": "3.0.0",
    "info": {
        "title": "Roamler API",
        "version": "1.0"
    },
    "paths": {
        "/api/user/register": {
            "post": {
                "tags": [
                    "User Auth"
                ],
                "summary": "Create a user in the database",
                "operationId": "aaa4aa2bcb8eb835bae113fa4012d935",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "David"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "secretpassword"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "A user is uccessfully created"
                    },
                    "422": {
                        "description": "Validation failure"
                    }
                }
            }
        },
        "/api/user/login": {
            "post": {
                "tags": [
                    "User Auth"
                ],
                "summary": "User login by email and password",
                "operationId": "eade6bc2477216301854cfd87b8d7488",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "secretpassword"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid email or password"
                    },
                    "422": {
                        "description": "Validation failure"
                    }
                }
            }
        }
    }
}